<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:clipToPadding="true"
    android:layout_height="fill_parent"
    android:elevation="10dp">
    <RelativeLayout
        android:background="@drawable/subjectaddlay"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/close"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ADD EXTRA CLASS"
            android:id="@+id/textView"
            android:layout_below="@+id/imageButton3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:textSize="21sp"
            android:textColor="#009688"
            android:hint="HH:MIN"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_radius"
            android:layout_below="@+id/spinner"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:textColor="#009688"
            android:hint="Duration"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_radius"
            android:layout_alignTop="@+id/editText"
            android:layout_alignEnd="@+id/imageButton3" />

        <Button
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:padding="17dp"
            android:id="@+id/absent"
            android:clickable="true"
            android:textColor="#fff"
            android:background="@drawable/redius_remove"
            android:layout_alignTop="@+id/present"
            android:layout_alignEnd="@+id/editText2" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESENT"
            android:id="@+id/present"
            android:padding="17dp"
            android:clickable="true"
            android:textColor="#fff"
            android:background="@drawable/radius"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editText" />

        <Spinner
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:textAlignment="center"
            android:background="@drawable/input_radius"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>

